<!-- 部分テンプレート-->
<div id="<%= dom_id idea %>" class="row"><!--divで囲まれた部分を一行とする-->

  <div class="col-md-6 my-3">
    <%= image_tag(idea.picture_url, width: '100%') if idea.picture.present? %><!--画像表示処理 -->
  </div>
  <div class="col-md-6 my-3">
    <h1>
      <%= idea.title %>
    </h1>

    <time class="badge rounded-pill bg-info text-dark"><!--日付を円形のバッジの形で囲む-->
      <%= idea.published_at %>
    </time>
 
    <p class="my-4">
      <%= idea.description %>
    </p>

  </div>
</div>
